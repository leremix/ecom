 <table >
  <thead>
    <tr>
      <th>#</th>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
  <% @cart.cart_products.each do |product| %>
    <tr>
      <th scope="row">
      <%= product.quantity %>
      </th>
      <td><%= product.product.title %></td>
      <td><%= product.product.description %></td>
      <td><%= product.product.price %></td>
      <td>
<%= button_to remove_from_cart_path(product), method: :delete do %>
            remove product
            <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

